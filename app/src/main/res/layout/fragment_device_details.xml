<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.ui.details.DeviceDetailsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        app:titleTextColor="@color/white" />

    <TextView
        android:id="@+id/device_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="MAC Address: D4:9D:C0:97:F2:A9"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/device_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Connection status:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/device_services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Available services:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/device_char_and_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Temperature: 45"
        android:textSize="20sp" />

</LinearLayout>